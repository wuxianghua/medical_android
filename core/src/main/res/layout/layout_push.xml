<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:background="@drawable/bg_toast"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/img_close"
        android:layout_margin="@dimen/ngr_normal"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <LinearLayout
        android:background="@drawable/bg_push_logo"
        android:padding="1dp"
        android:id="@+id/layout_img_logo"
        android:layout_marginTop="@dimen/nrg_big"
        android:layout_marginLeft="@dimen/nrg_big"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="44dp"
            android:layout_height="44dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_name"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_marginTop="44dp"
        android:layout_toRightOf="@+id/layout_img_logo"
        android:layout_marginLeft="@dimen/ngr_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginBottom="@dimen/ngr_Twenty"
        android:id="@+id/tv_describe"
        android:layout_marginTop="@dimen/ngr_small"
        android:layout_alignLeft="@+id/layout_img_logo"
        android:layout_marginRight="@dimen/nrg_big"
        android:layout_below="@+id/layout_img_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>