<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolBar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_height"
    android:background="@color/ngr_colorPrimary"
    android:minHeight="?attr/actionBarSize"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    app:theme="@style/ThemeOverlay.AppCompat.ActionBar">

    <RelativeLayout
        android:paddingRight="@dimen/ngr_small"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layout_back"
            android:layout_marginLeft="@dimen/ngr_small"
            android:padding="@dimen/ngr_normal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_centerVertical="true"
                android:background="@mipmap/ngr_icon_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_toLeftOf="@+id/tv_search"
            android:padding="@dimen/ngr_small"
            android:layout_margin="@dimen/ngr_normal"
            android:background="@drawable/bg_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/layout_back">

            <ImageView
                android:id="@+id/img_ico_search"
                android:layout_marginTop="@dimen/ngr_small"
                android:layout_marginBottom="@dimen/ngr_small"
                android:src="@mipmap/ico_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_toRightOf="@+id/img_ico_search"
                android:textColor="@android:color/white"
                android:layout_marginLeft="@dimen/ngr_small"
                android:id="@+id/edit_search"
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:completionThreshold="1"
                android:textColorHint="#ebebeb"
                android:hint="请输入检索关键字"
                android:textSize="12sp"
                android:background="@null"
                android:layout_toLeftOf="@+id/img_clear"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/img_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ico_search_closs" />
        </RelativeLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_search"
            android:textSize="16sp"
            android:layout_marginRight="@dimen/ngr_normal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:text="搜索"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</android.support.v7.widget.Toolbar>