<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:orientation="vertical">

    <LinearLayout
        android:padding="@dimen/ngr_small"
        android:id="@+id/layout_info_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_info"
        android:minWidth="100dp"
        android:clipChildren="false"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginLeft="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ico_in_start" />

            <TextView
                android:id="@+id/lable_startMsg"
                style="@style/routeInfoLableStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ngr_normal"
                android:maxEms="6"
                android:maxLines="1" />

            <TextView
                android:id="@+id/tv_startMsg"
                style="@style/routeInfoTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ngr_normal"
                android:maxEms="6"
                android:maxLines="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ngr_normal"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ico_in_end" />

            <TextView
                android:id="@+id/lable_endMsg"
                style="@style/routeInfoLableStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ngr_normal"
                android:maxEms="6"
                android:maxLines="1" />

            <TextView
                android:id="@+id/tv_endMsg"
                style="@style/routeInfoTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ngr_normal"
                android:maxEms="6"
                android:maxLines="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ngr_normal"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ico_in_details" />

            <TextView
                android:id="@+id/tv_detailsMsg"
                style="@style/routeInfoLableStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ngr_normal"
                android:maxLines="1" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_routeFloor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <View
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_centerInParent="true"
                android:layerType="software"
                android:background="@drawable/dotted_line"
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_centerInParent="true"
                android:id="@+id/layout_routeFloor_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_Arrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ngr_small"
        android:background="@drawable/bg_info"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/ngr_small"
        android:paddingLeft="@dimen/ngr_normal"
        android:paddingRight="@dimen/ngr_normal"
        android:paddingTop="@dimen/ngr_small"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_Arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ico_in_up" />

        <TextView
            android:id="@+id/tv_Arrow"
            style="@style/routeInfoLableStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ngr_small"
            android:text="@string/ngr_msg_navi_up" />

    </LinearLayout>

</LinearLayout>