<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/layout_poi_info"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_poiName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="@dimen/ngr_normal"
            android:text="自组服务区"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_poiName"
            android:layout_below="@+id/tv_poiName"
            android:layout_marginTop="@dimen/ngr_normal"
            android:drawableLeft="@mipmap/ic_card_location"
            android:drawablePadding="@dimen/ngr_small"
            android:gravity="center_vertical"
            android:text="1F 315"/>

        <TextView
            android:id="@+id/btn_goHere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/ngr_large"
            android:drawableLeft="@mipmap/ic_card_go"
            android:drawablePadding="@dimen/ngr_small"
            android:gravity="center_vertical"
            android:text="去这里"
            android:textColor="#00A2F5"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_select_start"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="选择起点"
            android:textColor="#6E768F"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:enabled="false"
                android:id="@+id/btn_mockNavi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="模拟导航"/>

            <Button
                android:id="@+id/btn_startNavi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="开始导航"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_navi_ready"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:visibility="gone">

        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/image_sound"
            android:layout_toRightOf="@+id/image_closeNavi"
            android:text="剩余约25米"
            android:textColor="#6E768F"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/image_closeNavi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@mipmap/ic_card_close"/>


        <ImageView
            android:id="@+id/image_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@mipmap/ic_card_voice"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_navi_info"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#0ff"
        android:visibility="gone">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_navi_ok"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#f0f"
        android:visibility="gone">
    </RelativeLayout>


</FrameLayout>