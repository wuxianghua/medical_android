<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="30dp"
    android:paddingLeft="@dimen/ngr_large"
    android:paddingRight="@dimen/ngr_large"
    android:background="@drawable/bg_corner_white"
    android:paddingTop="@dimen/ngr_large">

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ico_task_close" />

    <WebView
        android:id="@+id/webView"
        android:layout_marginTop="@dimen/ngr_normal"
        android:layout_below="@+id/img_close"
        android:layout_width="match_parent"
        android:layout_above="@+id/btn_share"
        android:layout_marginBottom="@dimen/ngr_normal"
        android:layout_height="match_parent"/>

    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_share"
        android:layout_width="175dp"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ngr_bg_corner_blue"
        android:text="@string/share"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

</RelativeLayout>