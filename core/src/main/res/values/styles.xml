<resources>
    <!-- Base application theme. -->
    <style name="ngr_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ngr_colorPrimary</item>
        <item name="colorPrimaryDark">@color/ngr_colorPrimaryDark</item>
        <item name="colorAccent">@color/ngr_colorAccent</item>
        <item name="toolbarStyle">@style/ngr_toolBar</item>
        <item name="drawerArrowStyle">@style/ngr_myDrawerArrowStyle</item>
    </style>

    <style name="ngr_toolBar" parent="Widget.AppCompat.Toolbar">
        <!-- 设置该属性解决空白部分-->
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="ngr_myDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

</resources>
